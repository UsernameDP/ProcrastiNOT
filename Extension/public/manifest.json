{
    "manifest_version": 3,
    "name": "ProcrastiNOT",
    "version": "1.0",
    "description": "",
    "action": {
        "default_popup": "index.html"
    },
    "background": {
        "service_worker": "./background.js"
    },
    "permissions": [
        "scripting",
        "tabs",
        "activeTab",
        "webRequest",
        "webRequestBlocking",
        "storage"
    ],
    "host_permissions": [
        "https://*/*",
        "http://*/*"
    ],
    "icons": {
        "16": "./favicon/favicon-16x16.png",
        "32": "./favicon/favicon-32x32.png"
    }
}